<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20sp"
        android:elevation="6dp"
        android:fontFamily="@font/lobsterregular"
        android:shadowColor="#E1C829"
        android:shadowRadius="10"
        android:text="Hello World!"
        android:textColor="#E91E63"
        android:textSize="50sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/goldmanbold"
        android:text="Entrar"
        android:textSize="22sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/goldmanregular"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/nerkooneregular"
        android:shadowColor="#FF9800"
        android:shadowDx="2"
        android:shadowDy="5"
        android:shadowRadius="2"
        android:text="Esqueceu sua senha?"
        android:textColor="#03A9F4"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>